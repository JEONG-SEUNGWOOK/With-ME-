<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seungwook.withme.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_above="@+id/copyright"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:id="@+id/title"
            android:src="@drawable/title"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColorHint="#bbbbbb"
                android:singleLine="true"
                android:drawableLeft="@drawable/user_black2"
                android:padding="10dp"/>


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:hint="Password"
                android:textColorHint="#bbbbbb"
                android:password="true"
                android:drawableLeft="@drawable/lock_black"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/parse_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2299de"
                android:text="Login"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>


            <Button
                android:id="@+id/facebook_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/com_facebook_blue"
                android:drawableLeft="@drawable/com_facebook_button_icon"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Login with Facebook"
                android:textColor="@android:color/white" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".49"
                android:gravity="center"
                android:text="Create an Account"
                android:textStyle="bold"
                android:id="@+id/signup" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".49"
                android:gravity="center"
                android:text="Reset Password"
                android:textStyle="bold"
                android:id="@+id/resetpassword" />
        </LinearLayout>
        </LinearLayout>




    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Copyrightâ“’ 2015. WithME! ALL RIGHTS RESERVED"
        android:gravity="center"
        android:id="@+id/copyright"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
